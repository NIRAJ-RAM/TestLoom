# Environment Configuration for TestLoom Backend
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/testloom

# JWT Configuration 
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-access-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-different-from-access-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760

#Google Gemini Configuration 
GEMINI_API_KEY=your_gemini_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration (Optional)
# ALLOWED_IPS=192.168.1.100,10.0.0.5  # Comma-separated list of allowed IPs for admin endpoints
